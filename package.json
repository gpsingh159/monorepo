{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
  "dev": "npm-run-all --parallel app:react-crud-example app:react-dashboard",
  "app:react-crud-example": "npm --prefix ./apps/react-crud-example run dev",
  "app:react-dashboard": "npm --prefix ./apps/react-dashboard run dev",
  "build": "npm run prebuild && npm-run-all --parallel build:react-crud-example build:react-dashboard",
  "prebuild": "npm --prefix ./packages/common-utils run build",
  "build:react-crud-example": "npm --prefix ./apps/react-crud-example run build",
  "build:react-dashboard": "npm --prefix ./apps/react-dashboard run build"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "common-utils": "file:./packages/common-utils"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
